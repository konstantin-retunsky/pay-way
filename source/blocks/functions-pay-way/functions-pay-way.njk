<section class="{{ data.class }}">
	<h2 class="visually-hidden">
		{{ data.title.text }}
	</h2>

	<div class="container">
		<ul class="{{ data.list.class }}">
			{% for item in data.list.items %}
				<li class="{{item.class}}">
					<h3 class="{{item.title.class}}">
						{{item.title.text}}
					</h3>
					<p class="{{item.text.class}}">
						{{iconWrapper.value(item.iconWrapper)}}
						{{item.text.text}}
						{% if item.text.bold %}
							<span class="{{item.text.bold.class}}">
								{{item.text.bold.text}}
							</span>
						{% endif %}
					</p>
				</li>
			{% endfor %}
		</ul>
	</div>
</section>
